@model List<Categorie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index Categorie</h1>

<table>
    <thead>
        <tr>
            Categorie Name :
        </tr>
        <tr>
            Display Order :
        </tr>
        <tr>
            DateTime created :
        </tr>
    </thead>

    <tbody>
        @foreach(var c in Model)
        {
            <tr>@c.Name</tr>
            <tr>@c.DisplayOrder</tr>
            <tr>@c.CreatedDateTime</tr>
            <tr>
                <a asp-controller="Categorie" asp-action="EditCategorie" asp-route-id="@c.Id"> Update </a>
            </tr>
            <br />
        }
        
    </tbody>
</table>